<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.marni.registerapp.presentation.presentation.activities.EditProductActivity">

    <include
        android:id="@+id/toolbar_include"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/toolbar_include"
        android:layout_margin="15dp" />

    <TextView
        android:id="@+id/nametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_alignStart="@+id/image"
        android:text="Name"
        android:textColor="@color/black_text"
        android:textSize="@dimen/textsizeProduct" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/image"
        android:maxLines="1"
        android:text="" />

    <TextView
        android:id="@+id/pricetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/price"
        android:layout_alignBottom="@+id/price"
        android:layout_alignStart="@+id/nametext"
        android:text="Price"
        android:textColor="@color/black_text"
        android:textSize="@dimen/textsizeProduct" />

    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/name"
        android:maxLines="1"
        android:text="" />

    <TextView
        android:id="@+id/sizetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/size"
        android:layout_alignBottom="@+id/size"
        android:layout_alignStart="@+id/pricetext"
        android:text="Size"
        android:textColor="@color/black_text"
        android:textSize="@dimen/textsizeProduct" />

    <EditText
        android:id="@+id/size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/price"
        android:layout_alignStart="@+id/price"
        android:layout_below="@+id/price"
        android:maxLines="1"
        android:text="" />

    <TextView
        android:id="@+id/alcohol_percentagetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/alcoholpercentage"
        android:layout_alignBottom="@+id/alcoholpercentage"
        android:layout_alignStart="@+id/sizetext"
        android:text="Alcohol %"
        android:textColor="@color/black_text"
        android:textSize="@dimen/textsizeProduct" />

    <EditText
        android:id="@+id/alcoholpercentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/size"
        android:layout_alignStart="@+id/size"
        android:layout_below="@+id/size"
        android:maxLines="1"
        android:text="0.0" />

    <TextView
        android:id="@+id/allergy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewAddAllergy"
        android:layout_alignStart="@+id/alcohol_percentagetext"
        android:text="Allergies"
        android:textColor="@color/black_text"
        android:textSize="@dimen/textsizeProduct"
        android:layout_alignTop="@+id/imageViewAddAllergy" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/allergy_text"
        android:layout_alignStart="@+id/alcoholpercentage"
        android:layout_toStartOf="@+id/imageViewAddAllergy"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/imageViewAddAllergy" />

    <TextView
        android:id="@+id/textViewNoAllergies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/allergy_text"
        android:layout_alignStart="@+id/alcoholpercentage"
        android:layout_toStartOf="@+id/imageViewAddAllergy"
        android:text="None"
        android:textColor="@color/black_text"
        android:textSize="@dimen/textsizeProduct"
        android:visibility="invisible"
        android:layout_alignTop="@+id/linearLayout" />

    <ImageView
        android:id="@+id/imageViewAddAllergy"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:layout_alignEnd="@+id/alcoholpercentage"
        android:layout_below="@+id/alcoholpercentage"
        android:src="@drawable/ic_add_circle_black_24dp"
        android:tint="#FFC107" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/save_button"
        android:layout_alignBottom="@+id/save_button"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/image"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Delete"
        android:textColor="#fff" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/view"
        android:layout_margin="5dp"
        android:text="Save" />

</RelativeLayout>
