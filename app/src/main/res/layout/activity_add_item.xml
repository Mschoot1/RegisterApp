<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marni.registerapp.Presentation.Presentation.Activities.AddItemActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="7dp" />

        <TextView
            android:textSize="25dp"
            android:textColor="@color/black_text"
            android:id="@+id/textView_productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TESTTEKSTJE"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/image" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:maxLines="1"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/nametext"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@color/black_text"
            android:textSize="@dimen/textsizeProduct"
            android:id="@+id/nametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:layout_alignBaseline="@+id/name" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:maxLines="1"
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/pricetext"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@color/black_text"
            android:textSize="@dimen/textsizeProduct"
            android:id="@+id/pricetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:layout_alignBaseline="@+id/price" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:maxLines="1"
            android:id="@+id/size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/sizetext"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@color/black_text"
            android:textSize="@dimen/textsizeProduct"
            android:id="@+id/sizetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size:"
            android:layout_alignBaseline="@+id/size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:maxLines="1"
            android:id="@+id/alcohol_percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/alcohol_percentagetext"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@color/black_text"
            android:textSize="@dimen/textsizeProduct"
            android:id="@+id/alcohol_percentagetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="% Alcohol:"
            android:layout_alignBaseline="@+id/alcohol_percentage" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/category_spinner_text"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/category_spinner"
            android:text="Category:"
            android:textColor="@color/black_text"
            android:textSize="@dimen/textsizeProduct" />

        <Spinner
            android:entries="@array/array_name"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:layout_toEndOf="@+id/category_spinner_text"
            android:id="@+id/category_spinner"
            android:layout_width="250dp"
            android:dropDownWidth="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/buttonColorPink"
            android:contextClickable="true"
            android:layout_alignParentTop="true"></Spinner>
    </RelativeLayout>


    <Button
        android:id="@+id/cancel_button"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/alcohol_percentage"
        android:layout_marginTop="210dp"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/alcohol_percentage"
        android:layout_toRightOf="@+id/cancel_button"
        android:layout_marginTop="210dp"/>

</LinearLayout>
