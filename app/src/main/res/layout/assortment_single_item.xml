<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/assortment_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Beer"
            android:textColor="@color/productName"
            android:textSize="@dimen/textsizeProduct" />

        <TextView
            android:id="@+id/assortment_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/assortment_product"
            android:layout_alignStart="@+id/assortment_product"
            android:layout_below="@+id/assortment_product"
            android:layout_marginEnd="@dimen/tvMarginRight"
            android:layout_marginRight="@dimen/tvMarginRight"
            android:text="330ml"
            android:textSize="@dimen/textsizeProduct"
            android:textColor="@color/black_text"/>

        <TextView
            android:id="@+id/assortment_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tvMarginRight"
            android:text="$2.00"
            android:textColor="@color/productName"
            android:textSize="@dimen/textsizeProduct"
            android:layout_marginEnd="17dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/assortment_alcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/assortment_size"
            android:layout_alignBottom="@+id/assortment_size"
            android:layout_toEndOf="@+id/assortment_size"
            android:layout_toRightOf="@+id/assortment_size"
            android:text="5% Alc."
            android:textSize="@dimen/textsizeProduct"
            android:textColor="@color/black_text"/>

    </RelativeLayout>

</RelativeLayout>

