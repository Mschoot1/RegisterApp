<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <TextView
                android:textColor="@color/black_text"
                android:id="@+id/textViewCustomer_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingProduct"
                android:text="@string/customerid"
                android:textSize="@dimen/textsizeProduct"
                android:layout_below="@+id/textViewId"
                android:layout_alignStart="@+id/textViewId" />

            <TextView
                android:textColor="@color/black_text"
                android:id="@+id/textViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingProduct"
                android:text="@string/orderid"
                android:textSize="@dimen/textsizeProduct"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="22dp" />

            <TextView
                android:textColor="@color/black_text"
                android:id="@+id/textViewTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:padding="@dimen/paddingProduct"
                android:text="@string/timestamp"
                android:textSize="@dimen/textsizeProduct"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:textColor="@color/black_text"
                android:id="@+id/textViewTotal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingProduct"
                android:text="@string/totaleprijs"
                android:textSize="@dimen/textsizeProduct"
                android:layout_below="@+id/textViewId"
                android:layout_alignStart="@+id/textViewTimestamp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>